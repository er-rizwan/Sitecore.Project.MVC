@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Project.MVC.Web.Extensions
@model RenderingModel

@{
	var currentURL = Sitecore.Links.LinkManager.GetItemUrl(Model.PageItem);
}

@if (Model != null && Model.PageItem != null)
{
	<!-- Page Header Start -->
	<div class="page-header">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<h2>@Html.Sitecore().Field("Title", Model.PageItem)</h2>
				</div>
				<div class="col-12">
					<a href="@Model.PageItem.Parent.URL()">@Html.Sitecore().Field("Title", Model.PageItem.Parent)</a>
					<a href="@Model.PageItem.URL()">@Html.Sitecore().Field("Title", Model.PageItem)</a>
				</div>
			</div>
		</div>
	</div> 
	<!-- Page Header End -->
}