@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Project.MVC.Web.Models
@model AboutViewModel

@if (Model != null && Model.item != null)
{
	<!-- About Start -->
	<div class="about wow fadeInUp" data-wow-delay="0.1s">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-5 col-md-6">
					<div class="about-img">
						@Html.Sitecore().Field("Image",Model.item)
					</div>
				</div>
				<div class="col-lg-7 col-md-6">
					<div class="section-header text-left">
						<p>@Html.Sitecore().Field("Title", Model.item)</p>
						<h2>@Html.Sitecore().Field("Sub_Title", Model.item)</h2>
					</div>
					<div class="about-text">
						@Html.Sitecore().Field("Description", Model.item)
						@Html.Sitecore().Field("Call_To_Action", new { @class="btn"})
						@*<a class="btn" href="">Learn More</a>*@
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- About End -->
}